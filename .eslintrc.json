{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["xo", "prettier"],
  "ignorePatterns": ["vitest.config.ts", "vite.config.ts"],
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier"],
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-unused-vars": "error",
        "@typescript-eslint/consistent-type-definitions": ["error", "interface"]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {}
}
